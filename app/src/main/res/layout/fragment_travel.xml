<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/etLand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Land" />

    <EditText
        android:id="@+id/etBy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="By" />

    <EditText
        android:id="@+id/etHotell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Hotell" />

    <EditText
        android:id="@+id/etHotellPris"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="Hotellpris pr. dÃ¸gn" />

    <EditText
        android:id="@+id/etFlyPris"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="Flypris hver vei" />

    <Button
        android:id="@+id/btnLagre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lagre" />

</LinearLayout>